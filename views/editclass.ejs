<% layout('/layout/boilerplate') %>

<body>
    


    <h3>create new class </h3>
    <form method="post" action="/class/<%=editclass._id%>/edit?_method=PUT" class="needs-validation" novalidate>
        <div>
            <label for="className" class="form-label">Class Name</label>
            <input type="text" name="className" value="<%=editclass.className%>" class="form-control" required>
            <div class="valid-feedback">Looks good!</div>
        </div>
    
        <div>
            <label for="classTeacher" class="form-label">Class Teacher</label>
            <input type="text" name="classTeacher" value="<%=editclass.classTeacher%>" class="form-control" required>
            <div class="invalid-feedback">Please enter a valid teacher name.</div>
        </div>
    
        <div>
            <label for="students" class="form-label">Students</label>
            <input type="text" name="students" value="<%=editclass.students%>" class="form-control" required>
            <div class="invalid-feedback">Please enter the total number of students.</div>
        </div>
    
        <div>
            <label for="courses" class="form-label">Courses</label>
            <input type="text" name="courses" value="<%=editclass.courses%>" class="form-control" required>
            <div class="invalid-feedback">Please enter valid course names.</div>
            <div class="valid-feedback">Looks good!</div>
        </div>
    
        <button class="btn btn-primary">Submit</button>
    </form>
    
    
</body>