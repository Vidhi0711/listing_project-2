<% layout('/layout/boilerplate') %>
<body>
    
    <div class="row"> 
        <div class="col-md-3">
            <form method="post" action="/teachers/<%= classid %>/newteacher" class="needs-validation" novalidate>
                
                <div>
                    <label for="name" class="form-label">Name</label>
                    <input type="text" name="name" class="form-control" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>

                <div>
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" class="form-control" required>
                    <div class="invalid-feedback">Please enter a valid email.</div>
                </div>

                <div>
                    <label for="phone" class="form-label">Phone</label>
                    <input type="number" name="phone" class="form-control" required>
                    <div class="invalid-feedback">Please enter a valid phone number.</div>
                </div>

                <div>
                    <label for="address" class="form-label">Address</label>
                    <input type="text" name="address" class="form-control">
                    <div class="valid-feedback">Looks good!</div>
                </div>

                <div>
                    <label for="classes" class="form-label">Classes (comma-separated)</label>
                    <input type="text" name="classes" class="form-control" required>
                    <div class="invalid-feedback">Please enter valid classes.</div>
                </div>

                <div>
                    <label for="subjects" class="form-label">Subjects (comma-separated)</label>
                    <input type="text" name="subjects" class="form-control" required>
                    <div class="invalid-feedback">Please enter valid subjects.</div>
                </div>

                <div>
                    <label for="qualification" class="form-label">Qualification (comma-separated)</label>
                    <input type="text" name="qualification" class="form-control" required>
                    <div class="invalid-feedback">Please enter valid qualifications.</div>
                </div>

                <div>
                    <label for="experience" class="form-label">Experience (comma-separated)</label>
                    <input type="text" name="experience" class="form-control" required>
                    <div class="invalid-feedback">Please enter valid experience.</div>
                </div>

                <div>
                    <label for="dateOfJoining" class="form-label">Date of Joining</label>
                    <input type="date" name="dateOfJoining" class="form-control" required>
                    <div class="invalid-feedback">Please enter a valid date.</div>
                </div>

                <button class="btn btn-primary mt-3">Submit</button>
            </form>
            </div>
            </div>
            
</body>
