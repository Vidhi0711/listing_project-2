<% layout('/layout/boilerplate') %>

<body>
    <div class="container">
        
         <p>Welcome, !</p>
          <div class="row row-cols-lg-3 row-cols-md-2 g-4">
            <% for (let driver of alldriver ) { %> 
              <div class="col">
                <div class="card" style="width: 18rem;">
                  <img src="<%=driver.image%> " class="card-img-top" alt="...">
                  <div class="card-body">
                    <h5 class="card-title"><%=driver.name %> <h5>
                     
                    <p class="card-text">
                        <strong> Address:</strong>     <%=driver.address%><br> 
                        <strong> Phone:</strong>       <%=driver.contacts%> <br>
                        <strong> Age :</strong>     <%=driver.age%><br>
                        <strong> Experience :</strong> <%=driver.experience%><br>
                        <strong> assignedVehicle :</strong>   <%=driver.assignedVehicle%> 

                               </p>
                    <a href="teacher/<%=driver._id%>/teacherdetail" class="btn btn-primary">Go somewhere</a>
                  </div>
                </div>
              </div>
            <% } %> 
          </div>
        </div>
</body>